rules_version = '2';

// Firebase Storage 보안 규칙
service firebase.storage {
  match /b/{bucket}/o {
    // 인증된 사용자만 자신의 폴더에 접근 가능
    match /{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 공개 파일 폴더 (읽기만 허용)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 관리자만 접근 가능한 폴더
    match /admin/{allPaths=**} {
      allow read, write: if request.auth != null &&
        request.auth.token.admin == true;
    }

    // 임시 파일 폴더 (업로드 후 1시간만 유지)
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null &&
        request.auth.uid == userId &&
        request.time < resource.timeCreated + duration.value(1, 'h');
    }

    // 파일 크기 제한 (10MB)
    match /{allPaths=**} {
      allow write: if request.auth != null &&
        request.resource.size < 10 * 1024 * 1024;
    }

    // 허용된 파일 타입만 업로드 가능
    match /{allPaths=**} {
      allow write: if request.auth != null &&
        (request.resource.contentType.matches('image/.*') ||
         request.resource.contentType.matches('video/.*') ||
         request.resource.contentType.matches('audio/.*') ||
         request.resource.contentType == 'application/pdf' ||
         request.resource.contentType.matches('text/.*') ||
         request.resource.contentType.matches('application/json') ||
         request.resource.contentType.matches('application/.*document.*') ||
         request.resource.contentType.matches('application/.*sheet.*') ||
         request.resource.contentType.matches('application/.*presentation.*'));
    }
  }
}